import requests
from time import sleep

def fetch_movie_details(movie_id):
    url = f"https://api.example.com/movies/{movie_id}"  # Replace with your actual API URL

    for i in range(3):  # Try up to 3 times
        try:
            response = requests.get(url, timeout=10)
            response.raise_for_status()  # Raise an error for bad status codes (e.g., 404, 500)
            return response.json()
        except requests.exceptions.RequestException as e:
            print(f"Attempt {i + 1} failed: {e}")
            sleep(2)  # Wait 2 seconds before retrying

    # If all retries fail, return an empty dictionary or handle as needed
    return {}